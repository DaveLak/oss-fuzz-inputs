# EditorConfig: https://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
charset = utf-8

[*.md]
trim_trailing_whitespace = false

[*.{vim,sh}]
indent_size = 4
max_line_length = 80

[*.{bat,vbs,ps1}]
end_of_line = CRLF
